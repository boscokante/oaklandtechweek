---
import scheduleData from '../data/schedule.json';

const day1 = scheduleData[0]; // First day
const featuredItems = day1.items.slice(0, 3); // First 3 items
---

<div class="max-w-4xl mx-auto">
  <div class="bg-white/10 backdrop-blur-sm border-2 border-ink/20 rounded-2xl p-8">
    <h3 class="text-3xl font-display font-semibold text-ink mb-8 text-center">
      {day1.date}
    </h3>
    
    <div class="space-y-6">
      {featuredItems.map((item) => (
        <div class="flex items-start space-x-4 p-4 bg-white/50 backdrop-blur-sm rounded-xl border border-ink/10">
          <div class="flex-shrink-0">
            <div class="w-20 text-center">
              <div class="text-sm font-mono font-bold text-ink">{item.time}</div>
            </div>
          </div>
          <div class="flex-1">
            <h4 class="text-lg font-display font-semibold text-ink mb-1">{item.title}</h4>
            {item.speakers && (
              <p class="text-ink/70 text-sm mb-2 font-mono">
                Speakers: {item.speakers.join(', ')}
              </p>
            )}
            <p class="text-ink/60 text-sm font-mono">
              📍 {item.location}
            </p>
          </div>
          <div class="flex-shrink-0">
            <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-mono uppercase ${
              item.type === 'keynote' ? 'bg-primary text-white' :
              item.type === 'panel' ? 'bg-accent text-white' :
              item.type === 'workshop' ? 'bg-ink text-white' :
              'bg-ink/10 text-ink'
            }`}>
              {item.type}
            </span>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<div class="text-center mt-12">
  <a href="/schedule" class="bg-white text-ink px-12 py-4 rounded-full font-display text-lg uppercase tracking-wide hover:bg-white/90 transition-all hover:scale-105 inline-block">
    See Full Schedule
  </a>
</div>

