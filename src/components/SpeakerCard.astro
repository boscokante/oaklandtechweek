---
export interface Props {
  name: string;
  title?: string;
  company?: string;
  photo: string;
  bio: string;
  links?: {
    twitter?: string;
    linkedin?: string;
    website?: string;
  };
}

const { name, title, company, photo, bio, links } = Astro.props;
---

<div class="card group">
  <div class="flex flex-col items-center text-center">
    <!-- Speaker Photo -->
    <div class="relative mb-6">
      <div class="w-32 h-32 rounded-full overflow-hidden bg-slate-100">
        <img 
          src={photo} 
          alt={`${name} headshot`}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          width="128"
          height="128"
        />
      </div>
    </div>
    
    <!-- Speaker Info -->
    <h3 class="text-xl font-display font-semibold text-ink mb-2">{name}</h3>
    {title && (
      <p class="text-slate-600 font-medium mb-1">{title}</p>
    )}
    {company && (
      <p class="text-slate-500 text-sm mb-4">{company}</p>
    )}
    
    <!-- Bio -->
    <p class="text-slate-600 text-sm leading-relaxed mb-6">{bio}</p>
    
    <!-- Social Links -->
    {links && (links.twitter || links.linkedin || links.website) && (
      <div class="flex space-x-3">
        {links.twitter && (
          <a 
            href={links.twitter} 
            target="_blank" 
            rel="noopener" 
            class="text-slate-400 hover:text-primary transition-colors"
            aria-label={`${name} on Twitter`}
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        )}
        {links.linkedin && (
          <a 
            href={links.linkedin} 
            target="_blank" 
            rel="noopener" 
            class="text-slate-400 hover:text-primary transition-colors"
            aria-label={`${name} on LinkedIn`}
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        )}
        {links.website && (
          <a 
            href={links.website} 
            target="_blank" 
            rel="noopener" 
            class="text-slate-400 hover:text-primary transition-colors"
            aria-label={`${name} website`}
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>
</div>
