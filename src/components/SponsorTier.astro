---
export interface Props {
  tier: string;
  sponsors: Array<{
    name: string;
    logo: string;
    url: string;
  }>;
}

const { tier, sponsors } = Astro.props;

    const tierStyles: Record<string, string> = {
      platinum: 'bg-gradient-to-r from-brandGreen to-brandGreen border-2 border-black/10',
      gold: 'bg-gradient-to-r from-accent to-accent border-2 border-black/10',
      silver: 'bg-gradient-to-r from-primary to-primary border-2 border-black/10',
      community: 'bg-gradient-to-r from-primary/10 to-brandGreen/20 border-2 border-black/10'
    };

const tierLabels: Record<string, string> = {
  platinum: 'Platinum Sponsors',
  gold: 'Gold Sponsors', 
  silver: 'Silver Sponsors',
  community: 'Community Partners'
};
---

<div class={`${tierStyles[tier]} rounded-2xl p-8 mb-8`}>
  <h3 class="text-2xl font-display font-semibold text-ink mb-6 text-center">
    {tierLabels[tier]}
  </h3>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {sponsors.map((sponsor) => (
      <a 
        href={sponsor.url} 
        target="_blank" 
        rel="noopener"
        class="flex items-center justify-center p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-200"
      >
        <img 
          src={sponsor.logo} 
          alt={`${sponsor.name} logo`}
          class="max-h-16 max-w-full object-contain"
          width="200"
          height="64"
        />
      </a>
    ))}
  </div>
</div>
