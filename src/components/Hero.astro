// No props needed
---

<section class="relative bg-gradient-to-br from-primary/5 via-white to-accent/5 min-h-screen flex items-center">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <div class="text-center">
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-display font-bold text-ink mb-6 text-balance">
        Oakland Tech Week
      </h1>
      <p class="text-xl sm:text-2xl text-slate-600 mb-8 max-w-3xl mx-auto text-balance">
        A week of talks, workshops, and founder meetups in the Town.
      </p>
      
      <!-- Date and Location Badges -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <div class="badge badge-primary text-lg px-6 py-3">
          📅 Nov 12–14, 2025
        </div>
        <div class="badge badge-accent text-lg px-6 py-3">
          📍 Oakland, CA
        </div>
      </div>
      
      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="https://example.com/tickets" class="btn-primary text-lg px-8 py-4" target="_blank" rel="noopener">
          Get Tickets
        </a>
        <a href="#newsletter" class="btn-secondary text-lg px-8 py-4">
          Get Updates
        </a>
      </div>
    </div>
  </div>
</section>

