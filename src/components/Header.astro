---
// No props needed
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <span class="text-2xl font-display font-bold text-primary">Oakland Tech Week</span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/speakers" class="text-slate-700 hover:text-primary transition-colors duration-200">Speakers</a>
          <a href="/schedule" class="text-slate-700 hover:text-primary transition-colors duration-200">Schedule</a>
          <a href="/venue" class="text-slate-700 hover:text-primary transition-colors duration-200">Venue</a>
          <a href="/sponsors" class="text-slate-700 hover:text-primary transition-colors duration-200">Sponsors</a>
          <a href="https://example.com/tickets" class="btn-primary" target="_blank" rel="noopener">Get Tickets</a>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-slate-700 hover:text-primary hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden mobile-menu hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-slate-200">
        <a href="/speakers" class="block px-3 py-2 text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-100 rounded-md">Speakers</a>
        <a href="/schedule" class="block px-3 py-2 text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-100 rounded-md">Schedule</a>
        <a href="/venue" class="block px-3 py-2 text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-100 rounded-md">Venue</a>
        <a href="/sponsors" class="block px-3 py-2 text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-100 rounded-md">Sponsors</a>
        <a href="https://example.com/tickets" class="block px-3 py-2 text-base font-medium text-white bg-primary hover:bg-primary-600 rounded-md" target="_blank" rel="noopener">Get Tickets</a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Simple mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        mobileMenu.classList.toggle('hidden');
        mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
      });
    }
  });
</script>
