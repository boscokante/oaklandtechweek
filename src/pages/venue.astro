---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
---

<BaseLayout 
  title="Venue - Oakland Tech Week"
  description="Join us at Oakstop in downtown Oakland for Oakland Tech Week 2026. Easy access via BART and parking available."
>
  <Header />
  
  <main id="main">
    <Section className="pt-24">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-ink mb-6">Venue</h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Join us at the heart of Oakland's tech community.
        </p>
      </div>
      
      <div class="max-w-6xl mx-auto">
        <div class="bg-white rounded-2xl shadow-lg p-8 mb-12">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
              <h2 class="text-3xl font-display font-bold text-ink mb-6">Oakstop</h2>
              <div class="space-y-6 text-slate-600">
                <div class="flex items-start">
                  <span class="text-primary mr-4 text-xl">📍</span>
                  <div>
                    <p class="font-semibold text-ink">Address</p>
                    <p>1721 Broadway, Oakland, CA 94612</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <span class="text-primary mr-4 text-xl">🚇</span>
                  <div>
                    <p class="font-semibold text-ink">Public Transit</p>
                    <p>5 minute walk from 12th St/Oakland City Center BART station</p>
                    <p class="text-sm mt-1">Also accessible via AC Transit bus lines</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <span class="text-primary mr-4 text-xl">🅿️</span>
                  <div>
                    <p class="font-semibold text-ink">Parking</p>
                    <p>Street parking and nearby garages available</p>
                    <p class="text-sm mt-1">We recommend using SpotHero for garage reservations</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <span class="text-primary mr-4 text-xl">♿</span>
                  <div>
                    <p class="font-semibold text-ink">Accessibility</p>
                    <p>Fully accessible venue with elevator access</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div>
              <iframe 
                src="https://www.openstreetmap.org/export/embed.html?bbox=-122.2700%2C37.8000%2C-122.2600%2C37.8100&layer=mapnik&marker=37.8050%2C-122.2650"
                width="100%" 
                height="400" 
                style="border:0; border-radius: 1rem;"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Oakstop location map"
              ></iframe>
            </div>
          </div>
        </div>
        
        <!-- Nearby Amenities -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <h3 class="text-xl font-display font-semibold text-ink mb-4">🍽️ Food & Drink</h3>
            <ul class="space-y-2 text-slate-600">
              <li>• Blue Bottle Coffee (2 blocks)</li>
              <li>• Whole Foods Market (3 blocks)</li>
              <li>• Local restaurants within walking distance</li>
            </ul>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <h3 class="text-xl font-display font-semibold text-ink mb-4">🏨 Hotels</h3>
            <ul class="space-y-2 text-slate-600">
              <li>• Oakland Marriott City Center</li>
              <li>• Waterfront Hotel</li>
              <li>• Various Airbnb options nearby</li>
            </ul>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <h3 class="text-xl font-display font-semibold text-ink mb-4">🚗 Getting Around</h3>
            <ul class="space-y-2 text-slate-600">
              <li>• BART to SF in 15 minutes</li>
              <li>• Uber/Lyft readily available</li>
              <li>• Bike share stations nearby</li>
            </ul>
          </div>
        </div>
      </div>
    </Section>
  </main>
  
  <Footer />
</BaseLayout>
