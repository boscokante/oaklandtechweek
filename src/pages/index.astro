---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import SpeakersTeaser from '../components/SpeakersTeaser.astro';
import ScheduleTeaser from '../components/ScheduleTeaser.astro';
import NewsletterForm from '../components/NewsletterForm.astro';
import SponsorTier from '../components/SponsorTier.astro';
import sponsorsData from '../data/sponsors.json';
---

<BaseLayout 
  title="Oakland Tech Week - April 14‚Äì18, 2026"
  description="A week of talks, workshops, and founder meetups in the Town. Join us for Oakland's premier tech conference featuring local innovators, entrepreneurs, and community leaders."
>
  <Header />
  
  <main id="main">
    <Hero />
    
    <SpeakersTeaser />
    
    <ScheduleTeaser />
    
    <!-- Sponsors Section -->
    <Section id="sponsors" className="bg-slate-50">
      <div class="text-center mb-16">
        <h2 class="text-4xl sm:text-5xl font-display font-bold text-ink mb-6">Our Sponsors</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Thank you to our amazing sponsors who make Oakland Tech Week possible.
        </p>
      </div>
      
      <div class="space-y-8">
        {Object.entries(sponsorsData).map(([tier, sponsors]) => (
          <SponsorTier tier={tier} sponsors={sponsors} />
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/sponsors" class="btn-primary">
          View All Sponsors
        </a>
      </div>
    </Section>
    
    <!-- Venue Section -->
    <Section id="venue">
      <div class="text-center mb-16">
        <h2 class="text-4xl sm:text-5xl font-display font-bold text-ink mb-6">Venue</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Join us at the heart of Oakland's tech community.
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div>
              <h3 class="text-2xl font-display font-semibold text-ink mb-4">Oakstop</h3>
              <div class="space-y-4 text-slate-600">
                <p class="flex items-start">
                  <span class="text-primary mr-3">üìç</span>
                  <span>1721 Broadway, Oakland, CA 94612</span>
                </p>
                <p class="flex items-start">
                  <span class="text-primary mr-3">üöá</span>
                  <span>5 min walk from 12th St/Oakland City Center BART</span>
                </p>
                <p class="flex items-start">
                  <span class="text-primary mr-3">üÖøÔ∏è</span>
                  <span>Street parking and nearby garages available</span>
                </p>
              </div>
            </div>
            <div>
              <iframe 
                src="https://www.openstreetmap.org/export/embed.html?bbox=-122.2700%2C37.8000%2C-122.2600%2C37.8100&layer=mapnik&marker=37.8050%2C-122.2650"
                width="100%" 
                height="300" 
                style="border:0; border-radius: 1rem;"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Oakstop location map"
              ></iframe>
            </div>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-12">
        <a href="/venue" class="btn-primary">
          Venue Details
        </a>
      </div>
    </Section>
    
    <NewsletterForm />
  </main>
  
  <Footer />
</BaseLayout>
